{
  "name": "obniz-cli",
  "version": "0.9.0",
  "description": "",
  "main": "dist/gui/main.js",
  "keywords": [
    "obniz"
  ],
  "repository": "obniz/obniz-cli",
  "scripts": {
    "pack:mac": "npx electron-builder --mac --x64",
    "pack:win64": "npx electron-builder --win --x64",
    "packager": "npm run build && npm run pack:mac && npm run pack:win64",
    "build": "npm run clean && npm run lint && tsc",
    "tsc": "tsc",
    "lint": "npm run lint-ts",
    "lint-ts": "tslint --fix -c tslint.json 'src/**/*.ts' ",
    "precommit": "lint-staged && npm run build",
    "clean": "rimraf ./dist && rimraf ./app",
    "local": "npx ts-node src/index.ts",
    "start": "ELECTRON_RUN_AS_NODE=1 ./node_modules/.bin/electron dist/index.js",
    "codegen": "graphql-codegen"
  },
  "bin": {
    "obniz-cli": "./dist/index.js"
  },
  "build": {
    "appId": "com.obniz.app.writer",
    "productName": "obnizWriter",
    "buildDependenciesFromSource": true,
    "npmRebuild": true,
    "directories": {
      "buildResources": "dist",
      "output": "app"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "graphql/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/obnizwriter.icns"
    },
    "win": {
      "icon": "public/obnizwriter.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerHeaderIcon": "public/obnizwriter.ico"
    }
  },
  "preferGlobal": true,
  "author": "obniz inc",
  "homepage": "https://obniz.com/",
  "license": "MIT",
  "bugs": {
    "url": "https://forum.obniz.com"
  },
  "private": false,
  "devDependencies": {
    "electron": "^14.0.0",
    "electron-builder": "^22.14.5",
    "electron-rebuild": "^3.2.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-prettier": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.0",
    "prettier": "^1.14.3",
    "rimraf": "^3.0.0",
    "ts-node": "^8.8.2",
    "tslint": "^5.20.1",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@9wick/esptool.js": "^0.9.5",
    "@graphql-codegen/cli": "^1.13.5",
    "@graphql-codegen/typescript": "^1.13.5",
    "@graphql-codegen/typescript-graphql-request": "^1.13.5",
    "@graphql-codegen/typescript-operations": "^1.13.5",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^7.3.3",
    "@types/node-fetch": "^2.5.12",
    "@types/opn": "^5.5.0",
    "@types/puppeteer-core": "^5.4.0",
    "@types/semver": "^7.3.8",
    "@types/serialport": "^8.0.2",
    "@types/socket.io": "^2.1.13",
    "@types/wtfnode": "^0.7.0",
    "chalk": "^4.0.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.6.1",
    "elliptic": "^6.5.2",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "graphql": "^15.5.1",
    "graphql-request": "^1.8.2",
    "inquirer": "^7.3.3",
    "log4js": "^6.1.2",
    "minimist": "^1.2.5",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "node-wifi": "^2.0.14",
    "opn": "^6.0.0",
    "ora": "^5.1.0",
    "puppeteer-core": "^3.0.4",
    "semver": "^7.3.2",
    "serialport": "^9.0.0",
    "shell-env": "^4.0.1",
    "socket.io": "^2.3.0",
    "utility-types": "^3.10.0",
    "wtfnode": "^0.9.1"
  }
}
