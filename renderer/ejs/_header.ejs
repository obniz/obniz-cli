<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="css/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/xterm/3.14.5/xterm.min.css"/>
    <link rel="stylesheet" href="./css/primary.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ejs@3.1.6/ejs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xterm/3.14.5/xterm.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
            crossorigin="anonymous"></script>
    <script src="./assets/javascript/index.js"></script>
    <script src="./assets/javascript/version.js"></script>

    <% if (typeof includes === 'undefined') {
        var includes = null;
    }; %>
    <% if (includes) { %>
        <% includes.forEach((file) => { %>
            <script src="./assets/javascript/<%= file %>"></script>
    <% }) %>
    <% } %>

    <script src="./assets/javascript/userinfo.js"></script>
</head>
<body>
<div class="fixed-top titlebar-flex">
    <nav class="titlebar bg-titlebar">
        <a class="navbar-brand">obniz Writer</a>

        <span class="dropdown">
          <a id="version" class="text-white" href="#" role="button" id="versionDropdownMenu" data-bs-toggle="dropdown"
             data-bs-display="static" aria-expanded="false">
            Ver. x.x.x
          </a>
          <ul class="dropdown-menu" aria-labelledby="versionDropdownMenu">
            <div id="versioninfo" class="version-info">
              <ul>
                <li>Version:</li>
                <li>
                  <ul>
                    <li>Current: Ver. x.x.x</li>
                    <li>Latest: Ver. x.x.x</li>
                  </ul>
                </li>
              </ul>
            </div>
            <li>
              <a class="dropdown-item text-primary" href="https://obniz.com/" target="_blank">Update</a>
            </li>
              </ul>

        </span>
    </nav>
    <div class="dropdown">
        <% let userMenuAttr = ''; %>
        <% if (typeof disableUserMenu !== 'undefined') { %>
            <% userMenuAttr = disableUserMenu ? ' disabled' : ''; %>
        <% } %>
        <a class="system user-menu<%= userMenuAttr %>" href="#" role="button" id="dropdownMenuButton"
           data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
        </a>
        <ul class="dropdown-menu dropdown-menu-center" aria-labelledby="dropdownMenuButton">
            <div id="userinfo" class="user-account">
                <ul>
                    <li>User:</li>
                    <li>
                        <ul>
                            <li>admin2@example.com</li>
<!--                            <li><a href="#">update account</a></li>-->
                        </ul>
                    </li>
                </ul>
            </div>
            <li><a id="signout" class="dropdown-item text-primary" href="#">Signout</a></li>
        </ul>
    </div>
    <span id="minimize" class="system system-minimize"></span>
    <span id="maximize" class="system system-maximize"></span>
    <span id="quit" class="system system-close"></span>
</div>
