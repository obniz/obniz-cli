{
  "compilerOptions": {
    "target": "es2017",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
